extends(src='templates/layout.sgr')

  block(name='title')
    title {{ blogTitle }}

  block(name='content')
    #index
      .g-title
        h1 {{ blogTitle }}
        h3 On webdev, gamedev, life, and writing.

      each(loop='post of contentful.indexPosts')
        include(src='/templates/_exGen.sgr')

      p(md) Looking for more? Browse through other categories or the full archive via the navigation menu up top!

.nav-link.active:not(:hover)
  text-decoration: none
  background-color: transparent

a.nav-item.active,
.nav-link.active
  background-color: #eee*/

#main
  line-height: 1.4
  margin: 78px auto 0 auto
  max-width: 700px
  font-size: 18px
  font-family: var(--fontFam)
  padding: 0 15px
  color: var(--textColor)

.nav, footer
  font-family: var(--fontFam)

a, a:link, a:visited
  color: var(--textColor)
a:hover
  color: #aaa

hr
  height: 5px
  border: 1px var(--textColor) solid
  background-color: var(--textColor)

.row
  max-width: 800px

#frontends .row, #games .row
  margin-bottom: 1em

#title
  font-size: 135%
  text-align: center
  @media (max-width: 1000px)
    font-size: 80%

.post
  margin-bottom: 2em

.date
  margin-top: 1em

img
  max-width: 100%

@import '_settings'

// ~~~~~~~~~~~~~~~~
// ~ Font Imports ~
// ~~~~~~~~~~~~~~~~

@font-face
  font-family 'enmod'
  font-style normal
  src url(fonts/enmod.ttf)

// ~ Lato includes ~

/* latin-ext */

// ~~~~~~~~~~
// ~ Mixins ~
// ~~~~~~~~~~

link(style = linkStyle)
	a:link,a:visited,a:active
		color linkBase
		text-decoration style
	a:hover 
		color linkHover
		text-decoration style

// ~~~~~~~~~~~~~~~~
// ~ Main Styling ~
// ~~~~~~~~~~~~~~~~

*, *::after, *::before
	box-sizing border-box

body
	font-family $body-font, sans-serif
	
h1
	font-family $header-font
h2, h3
	font-family sans-serif

// ~ Content Page Styles ~
// ~~~~~~~~~~~~~~~~~~~~~~~

// ~ Main Sections ~
section
	height 100vh
	padding 7%
	max-width 50em
	margin 0 auto	
link(none)

.soundcloud-box
	width 100%
	height 400px
	background-color gray
// ~ Stage Select ~
.contact__item
	text-align center
	lost-row 1/6
	+above(2)
		lost-column 1/3
#frontends-owl
	// lost-center: 100rem
	.frontends-owl__info
		lost-column: 1/2
		link(underline)
	.frontends-owl__img
		lost-column: 1/2
		transition(all 0.1s ease-in-out-sine)
		hover-pop(0.9)
	
	img
		max-width 100%

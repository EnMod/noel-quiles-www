/*Globals*/
/*<==-==>*/

*, *::after, *::before
  box-sizing: border-box

h1, h2, h3, h4, h5, h6
  line-height: 1.2

body
  line-height: 1.4
  margin: 0 auto
  max-width: 700px
  font-size: 18px
  font-family: 'Play'
  padding: 0 10px

#title-screen
  font-size: 135%
  text-align: center

h1
  font-family: 'enmod'

img
  max-width: 100%

.soundcloud-box
  width: 100%
  background-color: gray

.container
  display: flex
  flex-flow: row wrap
  margin: 0 auto

.container .box
  width: 50%
  height: 50%
  background-size: contain
  background-repeat: no-repeat

#c.box
  width: 100%
  height: 50%

#f
  background-image: url('../img/frontends.png')
#g
  background-image: url('../img/games.png')
#s
  background-image: url('../img/stories.png')
#b
  background-image: url('../img/freshbeats.png')

#melissa
  background-image: url('../img/melissa.jpg')
#teach
  background-image: url('../img/mteach.jpg')
#abwow
  background-image: url('../img/abwow.jpg')
#sjhg
  background-image: url('https://placehold.it/400x300')


// ---------------
// ~ Breakpoints ~
// ---------------

@breakpoint-down sm
  .container
    width: 350px
    height: 350px

@breakpoint-up md
  .container
    width: 600px
    height: 600px

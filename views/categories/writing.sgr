extends(src='templates/layout.sgr')

  block(name='title')
    title Writing | {{ blogTitle }}

  block(name='content')
    #writing
      each(loop='cat of contentful.categories')
        if(condition="cat.fields.slug === 'writing'")
          .g-title
            h1 {{ cat.fields.title }}
            h3 {{ cat.fields.description }}
      each(loop='post of contentful.fullPosts')
        each(loop='postCat of post.fields.category')
          if(condition="postCat.fields.slug === 'writing'")
            include(src='/templates/_exGenNoCat.sgr')

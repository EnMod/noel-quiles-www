@import url(https://fonts.googleapis.com/css?family=Play)

@font-face
  font-family: enmod
  src: url(enmod.ttf)

/* ~~~~~~~~~~~ */
/* ~ Globals ~ */
/* ~~~~~~~~~~~ */

:root
  --fontFam: 'Play'
  --textColor: #333

*, *::after, *::before
  box-sizing: border-box

body
  margin: 0

h1, h2, h3, h4, h5, h6
  line-height: 1.2

h1
  font-family: 'enmod'
  text-align: center

h2
  margin-top: 0px
  margin-bottom: 0px

.nav
  position: fixed
  top: 0
  background: #ddd
  width: 100%
  & a, 
  & a:link, 
  & a:visited
    color: var(--textColor)
    text-decoration: none

